CLAUDE_PROXY_HOST=127.0.0.1
CLAUDE_PROXY_PORT=15722
CLAUDE_CODE_GATEWAY_TOKEN=replace-with-non-empty-token

CODEX_CLI_BIN=/opt/homebrew/bin/codex
CODEX_MODEL=gpt-5-codex
CODEX_DANGEROUSLY_BYPASS_APPROVALS_AND_SANDBOX=true

BLOCK_URL_INPUT=true
URL_BLOCKED_REPLY=抱歉，出于安全策略，我无法访问或下载链接。请直接粘贴文本或描述需求。
REDACT_SENSITIVE_OUTPUT=true

# Compliance policy controls
ENFORCE_FUND_BACKTEST_ONLY=false
ENFORCE_FUND_ONLY=true
FUND_CLASSIFIER_ENABLED=true
FUND_CLASSIFIER_API_BASE=
FUND_CLASSIFIER_MODEL=
FUND_CLASSIFIER_SECRET=
FUND_CLASSIFIER_SECRET_HEADER=authorization
FUND_CLASSIFIER_SECRET_PREFIX=Bearer
FUND_CLASSIFIER_TIMEOUT_MS=5000
FUND_CLASSIFIER_FAIL_OPEN=false
# FUND_CLASSIFIER_PROMPT=可选，自定义分类提示词（默认内置基金/ETF判定规则）
BLOCK_TRADING_ADVICE_INPUT=false
BLOCK_POLITICAL_INPUT=true
BLOCK_ADULT_INPUT=true
TRADING_ADVICE_BLOCKED_REPLY=抱歉，我不提供买卖建议或择时建议。
POLITICAL_BLOCKED_REPLY=抱歉，该话题不在可服务范围内。
ADULT_BLOCKED_REPLY=抱歉，该话题不在可服务范围内。
NON_BACKTEST_BLOCKED_REPLY=该请求当前未通过策略校验，请调整后重试。
NON_FUND_BLOCKED_REPLY=当前仅支持基金相关问题。你也可以询问“你能做什么”。

FORCE_CHINESE_OUTPUT=true
FORCE_HTML_BACKTEST_CHART=true

FORCE_IMAGE_TAG=true

# Cloudflare Turnstile
TURNSTILE_ENABLED=false
TURNSTILE_SECRET=
TURNSTILE_VERIFY_URL=https://challenges.cloudflare.com/turnstile/v0/siteverify
TURNSTILE_TOKEN_HEADER=x-turnstile-token
TURNSTILE_REQUIRED_ACTION=
TURNSTILE_REQUIRED_HOSTNAME=
# Optional: shared internal key (must match front/.env.*) for trusted precheck bypass
INTERNAL_TASK_KEY=

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Response cache
CACHE_ENABLED=true
CACHE_TTL_MS=120000
CACHE_MAX_ITEMS=500
